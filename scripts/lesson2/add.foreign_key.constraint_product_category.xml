<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">

    <changeSet id="before_addForeignKeyConstraints_product_category_table" author="yury.kropotkin" context="postgresql">
        <tagDatabase tag="before_addForeignKeyConstraints_product_category_table"/>
    </changeSet>

    <changeSet id="addForeignKeyConstraint.PRODUCT_CATEGORY" author="yury.kropotkin" context="postgresql" labels="product_category_table_addForeignKeyConstraint">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="FK_PRODUCT_CATEGORY_PRODUCT"/>
                <foreignKeyConstraintExists foreignKeyName="FK_PRODUCT_CATEGORY_CATEGORY"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseTableName="PRODUCT_CATEGORY" baseColumnNames="PRODUCT_ID" constraintName="FK_PRODUCT_CATEGORY_PRODUCT"
                                 referencedTableName="PRODUCT" referencedColumnNames="ID"/>

        <addForeignKeyConstraint baseTableName="PRODUCT_CATEGORY" baseColumnNames="CATEGORY_ID" constraintName="FK_PRODUCT_CATEGORY_CATEGORY"
                                 referencedTableName="CATEGORY" referencedColumnNames="ID"/>
    </changeSet>



</databaseChangeLog>
